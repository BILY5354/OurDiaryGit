<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <ViewAnimator
        android:id="@+id/va_top"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to MyBlog, enjoy!"
                    android:textAllCaps="false"
                    android:textColor="@color/color_black"
                    android:textSize="16sp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/IV_main_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_boy"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/TV_main_statue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="未登录"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"/>

                <TextView
                    android:id="@+id/TV_main_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/IV_main_avatar"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"
                    android:text="别名"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/TV_main_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/IV_main_avatar"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"
                    android:text="邮箱"
                    android:visibility="invisible"/>


            </RelativeLayout>
        </LinearLayout>
    </ViewAnimator>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_gray" />


    <FrameLayout
        android:id="@+id/sample_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:background="@color/light_blue">
    </FrameLayout>


    <ViewAnimator
        android:id="@+id/va_bottom"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/IV_main_search"
                android:src="@drawable/iv_main_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                app:tint="@color/color_black" />

            <EditText
                android:id="@+id/ET_main_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/IV_main_setting"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_edittext"
                android:layout_toRightOf="@+id/IV_main_search"
                />

            <ImageView
                android:id="@+id/IV_main_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/iv_main_setting"
                app:tint="@color/color_black" />

        </RelativeLayout>
    </ViewAnimator>
</LinearLayout>