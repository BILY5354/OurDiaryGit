<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/iv_diary_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_diary_entries_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DiaryPage"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/btn_diary_entries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Diary"
                android:layout_toLeftOf="@+id/btn_diary_photo_page"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_diary"/>

            <Button
                android:id="@+id/btn_diary_photo_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Photo"
                android:background="@drawable/button_diary"/>

            <Button
                android:id="@+id/btn_diary_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btn_diary_photo_page"
                android:layout_marginLeft="20dp"
                android:text="writing"
                android:background="@drawable/button_diary"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_entries_page"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/topic_divider"/>

    <FrameLayout
        android:id="@+id/fl_diary_fg"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="16">
    </FrameLayout>

</LinearLayout>